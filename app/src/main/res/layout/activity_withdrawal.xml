<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WithdrawalActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Withdrawal"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_Withdrawal"
        android:text="정말 계정을 삭제 하시겠어요?"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:weightSum="2">

        <Button
            android:id="@+id/withdrawCancleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 사용해볼래요"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"/>


        <Button
            android:id="@+id/withdrawalOkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네, 삭제할게요"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>